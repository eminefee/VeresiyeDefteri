@model List<User>
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Debt Records</title>
	<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
</head>
<body>
	<h1>Kullanıcılar</h1>

	<table id="debtTable" class="display">
		<thead>
			<tr>
				<th>Kullanıcı Adı</th>
				<th>Rolü</th>
				<th>Aksiyonlar</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var user in Model)
			{
				<tr>
					<td>@user.Username</td>
					<td>@user.Role</td>
					<td>
						<a href="@Url.Action("ChangePassword", "Profile", new { id = user.Id })" class="btn btn-sm btn-primary">Şifre Değiştir</a>
						<a href="@Url.Action("Delete", "Profile", new { id = user.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinizden emin misiniz?');">Sil</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
	<script>
		$(document).ready(function () {
			$('#debtTable').DataTable({
				language: {
					url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json" // Türkçe dil desteği
				}
			});
		});
	</script>
</body>
</html>
