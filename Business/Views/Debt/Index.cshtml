@model List<DebtRecord>

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Debt Records</title>
	<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
</head>
<body>
	<h1>Borç Kayıtları</h1>

	<table id="debtTable" class="display">
		<thead>
			<tr>
				<th>Müşteri İsmi</th>
				<th>Borç Miktarı</th>
				<th>Date</th>
				<th>Açıklama</th>
				<th>Aksiyonlar</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var record in Model)
			{
				<tr>
					<td>@record.CustomerName</td>
					<td>@record.Amount</td>
					<td>@record.Date.ToString("yyyy-MM-dd HH:mm")</td>
					<td>@record.Description</td>
					<td>
						<a href="@Url.Action("Edit", "Debt", new { id = record.Id })" class="btn btn-sm btn-primary">Güncelle</a>
						<a href="@Url.Action("Delete", "Debt", new { id = record.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinizden emin misiniz?');">Sil</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
	<script>
		$(document).ready(function () {
			$('#debtTable').DataTable({
				language: {
					url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json" // Türkçe dil desteği
				}
			});
		});
	</script>
</body>
</html>
